{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2022",
		"lib": ["es2022"],
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": ["nodes/**/*", "credentials/**/*"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
